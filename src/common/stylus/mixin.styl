border-1px($color)
  position: relative
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $color
    content: ' '
extend-click()
  position: relative
  &:after
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px
